{
  "printWidth": 120,
  "bracketSameLine": true,
  "bracketSpacing": true,
  "singleQuote": true,
  "quoteProps": "consistent",
  "trailingComma": "none",
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports"
  ],
  "importOrderParserPlugins": [
    "typescript",
    "jsx",
    "decorators-legacy"
  ],
  "importOrder": [
    "^(react|@react*(.*)$)",
    "^(@docusaurus)",
    "<THIRD_PARTY_MODULES>",
    "^(@/*(.*)$)",
    "^[./]",
    "^(?!.*[.]css$)[./].*$",
    ".css$"
  ]
}